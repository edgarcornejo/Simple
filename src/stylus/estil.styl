@import "reset.styl"
  
body
  margin auto
  background-image url(../images/fondo.png)
  background-color #0099FF
  font-family "Century Gothic"
  font-size 16px

a
  text-decoration none
  color white

#principal
  width 100%
  margin 0 auto
  height auto
  #cabecera
    width 90%
    display flex
    flex-wrap wrap
    margin 0 auto
    max-width 1280px
    padding-top 2rem
    #logo
      width 20%
      height 80px
      background url(../images/logo.png) no-repeat center center
      background-size contain
    h1
      width 80%
      font-size 4rem
      text-align center
      &:hover
        color white
    #menu
      width 100%
      height 48px
      padding-top 20px
      ul
        display flex
        border-radius 5px
        li
          width 20%
          height 48px
          line-height 3rem
          text-align center
          opacity 0.9
          font-size 1.1rem
          font-weight bold
          color white
          box-shadow 0px 0px 8px rgba(0,0,0,0.5)
          &:nth-of-type(1)
            background #FF4C4C
          &:nth-of-type(2)
            background #FFBF49
          &:nth-of-type(3)
            background #444444
          &:nth-of-type(4)
            background #6FDC6F
          &:nth-of-type(5)
            background #3AADFE
          a:hover
            opacity 0.5

#contenido
  width 90%
  max-width 1280px
  margin 3rem auto
  display flex
  justify-content space-between
  align-items flex-start
  article
    width 70%
    border-radius 5px
    background-color rgba(255,255,255,0.8)
    padding 2rem
    h2,h3,h4,h5,h6
      padding 1rem 0 1rem 0
      font-size 2rem
  #menuv
    width 25%
    height auto
    background-color rgba(255,255,255,0.8)
    border-radius 5px
    padding 1rem
    ul
      display flex
      flex-wrap wrap
    li
      line-height 1.3rem
      &:hover
        font-size 1.1rem
    a
      color #0099FF
      list-style circle

#pie
  width 100%
  background-color black
  ul
    width 90%
    margin 0 auto
  li
    margin auto
    list-style none
    padding-top 20px
    a
      &:hover
        font-size 20px
  .derechos
    text-align center

img
  &:hover
    filter grayscale(100%)


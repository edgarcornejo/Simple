@import "reset.styl"

/* Estilos de pagina */
body
  background-image url(../images/fondo.png)
  background-color bCeleste

#principal
  width 100%
  margin 0 auto
  height auto
  #cabecera
    width 80%
    display flex
    flex-wrap wrap
    margin 0 auto
    max-width laptop
    padding-top 3rem
  .logo
    display flex
    width 20%
    height 80px
    align-items center
    justify-content center
    img
      width auto/9
      height auto
      max-width 50%
  h1
    width 80%
    font-size 4rem
    letter-spacing 2pt
    text-align center
    color white
    text-transform uppercase
    &:hover
      color white
  #menu
    width 100%
    height 48px
    padding-top 3rem
    ul
      display flex
      border-radius 5%

      box-shadow 0px 0px 8px rgba(0,0,0,0.2)
      li
        width 20%
        height 48px
        text-align center
        opacity 0.9
        font-size 1.1rem
        font-weight bold
        color white
        &:nth-of-type(1)
          background #FF4C4C
        &:nth-of-type(2)
          background #FFBF49
        &:nth-of-type(3)
          background #444444
        &:nth-of-type(4)
          background #6FDC6F
        &:nth-of-type(5)
          background #3AADFE
        a
          width 100%
          height 100%
          display flex
          align-items center
          justify-content center
          &:hover
            opacity 0.6

#contenido
  width 80%
  max-width laptop
  margin 5rem auto
  display flex
  justify-content space-between
  align-items flex-start
  article
    width 70%
    border-radius 5px
    background-color rgba(255,255,255,0.8)
    padding 2rem
    h2,h3,h4,h5,h6
      padding 1rem 0 1.5rem 0
      font-size 3rem
    p
      padding-bottom 1.5rem
    figure 
      text-align center
      padding 2rem 0 2rem 0
      img
        width auto/9
        height auto
        max-width 200px
        padding-bottom 1rem
  #menuv
    width 25%
    height auto
    background-color rgba(255,255,255,0.8)
    border-radius 5px
    padding 2rem
    h3
      padding-bottom 2rem
      text-align center
      font-size 2rem
    ul
      display flex
      flex-direction column
      gap 1rem
    a
      color bBlueDark
      list-style circle

#pie
  width 100%
  background-color bBlueDark
  padding 3rem 0 1rem 0
  ul
    width 90%
    max-width laptop
    margin 0 auto
    display flex
    flex-direction column
    gap 2rem 0
  .derechos
    max-width laptop
    width 90%
    margin 2rem auto
    p
      text-align right
      color white